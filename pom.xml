<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.eurekaclinical</groupId>    
    <artifactId>user-webapp</artifactId>
    <packaging>war</packaging>
    <version>1.0-Alpha-2</version>
    <name>Eureka! Clinical User Webapp</name>
    <description>Eureka! Clinical User Webapp is the implementation of Eureka! Clinical User 
        web interface that is used by Eureka! Clinical multiple projects
    </description>    
    <inceptionYear>2016</inceptionYear> 
                
    <parent>
        <groupId>org.eurekaclinical</groupId>
        <artifactId>eurekaclinical-parent-standard-deps</artifactId>
        <version>1-Alpha-6</version>
    </parent>        

 
    <url>https://github.com/eurekaclinical/user-webapp</url>
        
    <properties>
        <tomcat.port>8080</tomcat.port>
        <tomcat.httpsPort>8443</tomcat.httpsPort>        
        <maven.build.timestamp.format>yyyyMMddHHmmss</maven.build.timestamp.format>
        <eureka.build.timestamp>${maven.build.timestamp}</eureka.build.timestamp> 
    </properties>

    <scm>
        <connection>scm:git:https://github.com/eurekaclinical/user-webapp.git</connection>
        <developerConnection>scm:git:https://github.com/eurekaclinical/user-webapp.git</developerConnection>
        <url>https://github.com/eurekaclinical/user-webapp.git</url>
        <tag>HEAD</tag>
    </scm>

    <issueManagement>
        <system>GitHub</system>
        <url>https://github.com/eurekaclinical/user-webapp/issues</url>
    </issueManagement>

    <build>
            <finalName>user-webapp</finalName>
            <plugins>
                    <plugin>
                            <groupId>org.jasig.maven</groupId>
                            <artifactId>maven-notice-plugin</artifactId>
                            <configuration>
                                    <noticeTemplate>etc/NOTICE.template</noticeTemplate>
                                    <licenseMapping>
                                            <param>etc/license-mappings.xml</param>
                                    </licenseMapping>
                            </configuration>
                    </plugin>                  
                    <plugin>
                            <groupId>net.alchim31.maven</groupId>
                            <artifactId>yuicompressor-maven-plugin</artifactId>
                            <executions>
                                    <execution>
                                            <goals>
                                                    <goal>compress</goal>
                                            </goals>
                                    </execution>
                            </executions>                              
                            <configuration>
                                    <!--<suffix>${maven.build.timestamp}</suffix>-->
                                    <includes>
                                            <include>assets/js/eureka.*.js</include>
                                            <include>assets/css/eureka.css</include>
                                    </includes>
                            </configuration>
                    </plugin>      
                    <plugin>
                            <groupId>org.apache.maven.plugins</groupId>
                            <artifactId>maven-compiler-plugin</artifactId>
                    </plugin>                                     
                    <plugin>
                            <groupId>org.apache.maven.plugins</groupId>
                            <artifactId>maven-war-plugin</artifactId>
                            <configuration>
                                    <filteringDeploymentDescriptors>true</filteringDeploymentDescriptors>
                                    <packagingIncludes>
                                            <!--%regex[assets/js/eureka.*${maven.build.timestamp}.js],-->
                                            %regex[assets/js/eureka.*.js],
                                            %regex[^(?!assets/js/eureka).*$],
                                            assets/css/eureka.css
                                    </packagingIncludes>                                    
                                    <packagingExcludes>
                                            node_modules/**
                                    </packagingExcludes>
                            </configuration>
                    </plugin>
                    <plugin>
                            <groupId>org.codehaus.mojo</groupId>
                            <artifactId>license-maven-plugin</artifactId>
                            <configuration>
                                    <excludes>
                                            <exclude>**/*.htm</exclude>
                                            <exclude>**/*.html</exclude>
                                            <exclude>**/*.js</exclude>
                                            <exclude>**/*.css</exclude>
                                            <exclude>**/*.json</exclude>
                                    </excludes>
                            </configuration>                            
                    </plugin>     
                    <plugin>
                            <groupId>org.apache.maven.plugins</groupId>
                            <artifactId>maven-resources-plugin</artifactId>
                            <executions>
                                    <execution>
                                            <id>copy-tomcat-configs</id>
                                            <phase>process-classes</phase>
                                            <goals>
                                                    <goal>copy-resources</goal>
                                            </goals>
                                            <configuration>
                                                    <outputDirectory>${project.build.directory}/tomcat-config</outputDirectory>
                                                    <resources>
                                                            <resource>
                                                                    <directory>${basedir}/src/main/resources/tomcat-server-config</directory>
                                                                    <filtering>true</filtering>
                                                                    <includes>
                                                                            <include>context.xml</include>
                                                                            <include>logging.properties</include>
                                                                    </includes>
                                                            </resource>
                                                            <resource>
                                                                    <directory>${basedir}/src/main/resources/tomcat-server-config</directory>
                                                                    <filtering>false</filtering>
                                                                    <excludes>
                                                                            <exclude>context.xml</exclude>
                                                                            <exclude>logging.properties</exclude>
                                                                    </excludes>
                                                            </resource>
                                                    </resources>
                                            </configuration>
                                    </execution>
                            </executions>
                    </plugin>
                    <plugin>
                            <artifactId>maven-clean-plugin</artifactId>
                            <version>3.0.0</version>
                            <configuration>
                                    <filesets>
                                            <fileset>
                                                    <directory>src/main/webapp</directory>
                                                    <includes>
                                                            <include>bower_components/**</include>
                                                            <include>build/**</include>
                                                            <include>node_modules/**</include>
                                                            <include>npm-debug.log</include>
                                                            <include>dist/**</include>
                                                    </includes>
                                            </fileset>
                                    </filesets>
                            </configuration>
                    </plugin>
                    <plugin>
				<groupId>com.github.eirslett</groupId>
				<artifactId>frontend-maven-plugin</artifactId>
				<version>1.0</version>
				<configuration>
					<workingDirectory>src/main/webapp</workingDirectory>
					<installDirectory>target</installDirectory>
				</configuration>
				<executions>
					<execution>
						<id>install node and npm</id>
						<goals>
							<goal>install-node-and-npm</goal>
						</goals>
						<configuration>
							<nodeVersion>v4.4.3</nodeVersion>
							<npmVersion>2.15.1</npmVersion>
						</configuration>
					</execution>
					<execution>
						<id>npm install</id>
						<goals>
							<goal>npm</goal>
						</goals>
						<configuration>
							<arguments>install</arguments>
						</configuration>
					</execution>
					<execution>
						<id>bower install</id>
						<goals>
							<goal>bower</goal>
						</goals>
						<configuration>
							<arguments>install</arguments>
						</configuration>
					</execution>
				</executions>
			</plugin>                                                                  
            </plugins>                               
    </build>
        
